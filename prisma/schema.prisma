// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma/client"
}

datasource db {
  provider = "postgresql"
}

// Enums
enum SubscriptionTier {
  STARTER
  GROWTH
  SCALE
}

enum UserRole {
  ADMIN
  USER
}

enum JurisdictionType {
  FEDERAL
  STATE
  LOCAL
}

enum RegulationStatus {
  ACTIVE
  ARCHIVED
}

enum PolicyDiffSignificance {
  HIGH
  MEDIUM
  LOW
}

enum DeadlineRiskLevel {
  CRITICAL
  IMPORTANT
  ROUTINE
}

// Models
model Customer {
  id               String           @id @default(cuid())
  companyName      String
  employeeCount    Int
  industry         String
  subscriptionTier SubscriptionTier
  createdAt        DateTime         @default(now())
  updatedAt        DateTime         @updatedAt

  users              User[]
  costEstimates      CostEstimate[]
  healthScoreHistory HealthScoreHistory[]

  @@map("customers")
}

model User {
  id               String    @id @default(cuid())
  email            String    @unique
  emailVerified    DateTime? @map("email_verified")
  passwordHash     String
  name             String?
  image            String?
  role             UserRole
  customerId       String
  dashboardLayout  Json?     // Stores widget positions from react-grid-layout
  createdAt        DateTime  @default(now())
  accounts         Account[]
  sessions         Session[]

  customer Customer @relation(fields: [customerId], references: [id], onDelete: Cascade)

  @@index([customerId])
  @@map("users")
}

model Jurisdiction {
  id   String           @id @default(cuid())
  code String           @unique
  name String
  type JurisdictionType

  regulations Regulation[]

  @@map("jurisdictions")
}

model Regulation {
  id             String           @id @default(cuid())
  jurisdictionId String
  regulationType String
  title          String
  sourceUrl      String?
  effectiveDate  DateTime?
  status         RegulationStatus
  createdAt      DateTime         @default(now())

  jurisdiction Jurisdiction        @relation(fields: [jurisdictionId], references: [id], onDelete: Cascade)
  versions     RegulationVersion[]

  @@index([jurisdictionId])
  @@map("regulations")
}

model RegulationVersion {
  id            String   @id @default(cuid())
  regulationId  String
  versionNumber Int
  contentText   String   @db.Text
  contentJson   Json?
  publishedDate DateTime
  ingestedDate  DateTime @default(now())

  regulation                  Regulation     @relation(fields: [regulationId], references: [id], onDelete: Cascade)
  policyDiff                  PolicyDiff?    @relation("PolicyDiffVersion")
  policyDiffsPreviousVersions PolicyDiff[]   @relation("PolicyDiffPreviousVersion")
  deadlines                   Deadline[]
  costEstimates               CostEstimate[]

  @@index([regulationId])
  @@map("regulation_versions")
}

model PolicyDiff {
  id                  String                 @id @default(cuid())
  regulationVersionId String                 @unique
  previousVersionId   String?
  diffText            String                 @db.Text
  summary             String                 @db.Text
  keyChanges          String[]
  significanceScore   PolicyDiffSignificance
  aiConfidence        Float
  createdAt           DateTime               @default(now())

  regulationVersion RegulationVersion  @relation("PolicyDiffVersion", fields: [regulationVersionId], references: [id], onDelete: Cascade)
  previousVersion   RegulationVersion? @relation("PolicyDiffPreviousVersion", fields: [previousVersionId], references: [id], onDelete: SetNull)

  @@index([regulationVersionId])
  @@index([previousVersionId])
  @@map("policy_diffs")
}

model Deadline {
  id                   String            @id @default(cuid())
  regulationVersionId  String
  deadlineDate         DateTime
  deadlineType         String
  description          String
  riskLevel            DeadlineRiskLevel
  extractionConfidence Float
  notificationSent     Boolean           @default(false)
  createdAt            DateTime          @default(now())

  regulationVersion RegulationVersion @relation(fields: [regulationVersionId], references: [id], onDelete: Cascade)

  @@index([regulationVersionId])
  @@map("deadlines")
}

model CostEstimate {
  id                  String   @id @default(cuid())
  regulationVersionId String
  customerId          String
  oneTimeCostLow      Float
  oneTimeCostHigh     Float
  recurringCostAnnual Float
  costDriversJson     Json
  departmentBreakdown Json?
  estimationMethod    String
  confidence          Float
  createdAt           DateTime @default(now())

  regulationVersion RegulationVersion @relation(fields: [regulationVersionId], references: [id], onDelete: Cascade)
  customer          Customer          @relation(fields: [customerId], references: [id], onDelete: Cascade)

  @@index([regulationVersionId])
  @@index([customerId])
  @@map("cost_estimates")
}

model HealthScoreHistory {
  id         String   @id @default(cuid())
  customerId String
  score      Int      // 0-100
  recordedAt DateTime @default(now())

  customer Customer @relation(fields: [customerId], references: [id], onDelete: Cascade)

  @@index([customerId, recordedAt])
  @@map("health_score_history")
}

model Account {
  id                String  @id @default(cuid())
  userId            String  @map("user_id")
  type              String
  provider          String
  providerAccountId String  @map("provider_account_id")
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@map("accounts")
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique @map("session_token")
  userId       String   @map("user_id")
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("sessions")
}

model VerificationToken {
  identifier String
  token      String
  expires    DateTime

  @@unique([identifier, token])
  @@map("verification_tokens")
}
