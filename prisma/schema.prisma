// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma/client"
}

datasource db {
  provider = "postgresql"
}

// Enums
enum SubscriptionTier {
  STARTER
  GROWTH
  SCALE
}

enum UserRole {
  ADMIN
  USER
}

enum JurisdictionType {
  FEDERAL
  STATE
  LOCAL
}

enum RegulationStatus {
  ACTIVE
  ARCHIVED
}

enum PolicyDiffSignificance {
  HIGH
  MEDIUM
  LOW
}

enum DeadlineRiskLevel {
  CRITICAL
  IMPORTANT
  ROUTINE
}

// Models
model Customer {
  id               String           @id @default(cuid())
  companyName      String
  employeeCount    Int
  industry         String
  subscriptionTier SubscriptionTier
  createdAt        DateTime         @default(now())
  updatedAt        DateTime         @updatedAt

  users              User[]
  costEstimates      CostEstimate[]
  healthScoreHistory HealthScoreHistory[]
  // ✅ PHASE 3: Collaboration
  alerts Alert[]
  activities Activity[]
  healthScoreCache HealthScoreCache?

  @@map("customers")
}

model User {
  id               String    @id @default(cuid())
  email            String    @unique
  emailVerified    DateTime? @map("email_verified")
  passwordHash     String
  name             String?
  image            String?
  role             UserRole
  customerId       String
  dashboardLayout  Json?     // Stores widget positions from react-grid-layout
  createdAt        DateTime  @default(now())
  // ✅ PHASE 3: Notifications & Activity
  notificationPreferences Json?  // { email: bool, inApp: bool, digest: 'daily'|'weekly'|'never' }
  timezone String @default("America/New_York")
  lastActivityAt DateTime?
  accounts Account[]
  sessions Session[]
  customer Customer @relation(fields: [customerId], references: [id], onDelete: Cascade)
  
  comments Comment[]
  approvalsRequested Approval[] @relation("ApprovalRequester")
  approvalsGiven Approval[] @relation("ApprovalApprover")
  activities Activity[]

  @@index([customerId])
  @@map("users")
}

model Jurisdiction {
  id   String           @id @default(cuid())
  code String           @unique
  name String
  type JurisdictionType

  regulations Regulation[]

  @@map("jurisdictions")
}

model Regulation {
  id             String           @id @default(cuid())
  jurisdictionId String
  regulationType String
  title          String
  sourceUrl      String?
  effectiveDate  DateTime?
  status         RegulationStatus
  createdAt      DateTime         @default(now())

  jurisdiction Jurisdiction        @relation(fields: [jurisdictionId], references: [id], onDelete: Cascade)
  versions     RegulationVersion[]
  
  // ✅ PHASE 3
  comments     Comment[]
  alerts       Alert[]

  @@index([jurisdictionId])
  @@map("regulations")
}

model RegulationVersion {
  id            String   @id @default(cuid())
  regulationId  String
  versionNumber Int
  contentText   String   @db.Text
  contentJson   Json?
  publishedDate DateTime
  ingestedDate  DateTime @default(now())

  regulation                  Regulation     @relation(fields: [regulationId], references: [id], onDelete: Cascade)
  policyDiff                  PolicyDiff?    @relation("PolicyDiffVersion")
  policyDiffsPreviousVersions PolicyDiff[]   @relation("PolicyDiffPreviousVersion")
  deadlines                   Deadline[]
  costEstimates               CostEstimate[]

  @@index([regulationId])
  @@map("regulation_versions")
}

model PolicyDiff {
  id                  String                 @id @default(cuid())
  regulationVersionId String                 @unique
  previousVersionId   String?
  diffText            String                 @db.Text
  summary             String                 @db.Text
  keyChanges          String[]
  significanceScore   PolicyDiffSignificance
  aiConfidence        Float
  createdAt           DateTime               @default(now())

  regulationVersion RegulationVersion  @relation("PolicyDiffVersion", fields: [regulationVersionId], references: [id], onDelete: Cascade)
  previousVersion   RegulationVersion? @relation("PolicyDiffPreviousVersion", fields: [previousVersionId], references: [id], onDelete: SetNull)

  @@index([regulationVersionId])
  @@index([previousVersionId])
  @@map("policy_diffs")
}

model Deadline {
  id                   String            @id @default(cuid())
  regulationVersionId  String
  deadlineDate         DateTime
  deadlineType         String
  description          String
  riskLevel            DeadlineRiskLevel
  extractionConfidence Float
  notificationSent     Boolean           @default(false)
  createdAt            DateTime          @default(now())

  regulationVersion RegulationVersion @relation(fields: [regulationVersionId], references: [id], onDelete: Cascade)

  @@index([regulationVersionId])
  @@map("deadlines")
}

model CostEstimate {
  id                  String   @id @default(cuid())
  regulationVersionId String
  customerId          String
  oneTimeCostLow      Float
  oneTimeCostHigh     Float
  recurringCostAnnual Float
  costDriversJson     Json
  departmentBreakdown Json?
  estimationMethod    String
  confidence          Float
  createdAt           DateTime @default(now())
  
  // ✅ OPTIMIZATION 9: ETag caching
  contentHash         String?
  cachedAt            DateTime?
  cacheExpiresAt      DateTime?

  regulationVersion RegulationVersion @relation(fields: [regulationVersionId], references: [id], onDelete: Cascade)
  customer          Customer          @relation(fields: [customerId], references: [id], onDelete: Cascade)
  
  // ✅ PHASE 3
  approvals         Approval[]

  @@index([regulationVersionId])
  @@index([customerId])
  @@map("cost_estimates")
}

model HealthScoreHistory {
  id         String   @id @default(cuid())
  customerId String
  score      Int      // 0-100
  recordedAt DateTime @default(now())

  customer Customer @relation(fields: [customerId], references: [id], onDelete: Cascade)

  @@index([customerId, recordedAt])
  @@map("health_score_history")
}

model Account {
  id                String  @id @default(cuid())
  userId            String  @map("user_id")
  type              String
  provider          String
  providerAccountId String  @map("provider_account_id")
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@map("accounts")
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique @map("session_token")
  userId       String   @map("user_id")
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("sessions")
}

model VerificationToken {
  identifier String
  token      String
  expires    DateTime

  @@unique([identifier, token])
  @@map("verification_tokens")
}

// ============================================
// PHASE 3: Collaboration & Alerts
// ============================================

model Alert {
  id String @id @default(cuid())
  customerId String
  type String  // CRITICAL, IMPORTANT, INFO
  category String  // DEADLINE, COST, DETECTION, SYSTEM
  title String
  message String @db.Text
  regulationId String?
  actionUrl String?
  read Boolean @default(false)
  dismissed Boolean @default(false)
  createdAt DateTime @default(now())
  
  customer Customer @relation(fields: [customerId], references: [id], onDelete: Cascade)
  regulation Regulation? @relation(fields: [regulationId], references: [id], onDelete: SetNull)
  
  @@index([customerId, read])
  @@index([customerId, createdAt])
  @@index([customerId, type])
  @@map("alerts")
}

model Comment {
  id String @id @default(cuid())
  regulationId String
  userId String
  content String @db.Text
  parentId String?
  
  // ✅ OPTIMIZATION 4: Denormalize mentions (no re-parsing on every query)
  mentionedUserIds String[] @default([])
  
  editedAt DateTime?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
  regulation Regulation @relation(fields: [regulationId], references: [id], onDelete: Cascade)
  parent Comment? @relation("CommentThread", fields: [parentId], references: [id], onDelete: Cascade)
  replies Comment[] @relation("CommentThread")
  
  @@index([regulationId, createdAt])
  @@index([parentId])
  @@index([userId])
  @@map("comments")
}

model Approval {
  id String @id @default(cuid())
  costEstimateId String
  requesterId String
  approverId String?
  status String  // PENDING, APPROVED, REJECTED, CANCELLED
  requestNote String? @db.Text
  approverNote String? @db.Text
  createdAt DateTime @default(now())
  approvedAt DateTime?
  
  costEstimate CostEstimate @relation(fields: [costEstimateId], references: [id], onDelete: Cascade)
  requester User @relation("ApprovalRequester", fields: [requesterId], references: [id], onDelete: Cascade)
  approver User? @relation("ApprovalApprover", fields: [approverId], references: [id], onDelete: SetNull)
  
  @@index([costEstimateId])
  @@index([approverId, status])
  @@index([requesterId, status])
  @@map("approvals")
}

model Activity {
  id String @id @default(cuid())
  customerId String
  userId String
  type String  // COMMENT_ADDED, APPROVAL_UPDATED, REGULATION_DETECTED, DEADLINE_UPDATED
  entityType String  // REGULATION, COMMENT, APPROVAL
  entityId String
  description String
  metadata Json?
  createdAt DateTime @default(now())
  
  customer Customer @relation(fields: [customerId], references: [id], onDelete: Cascade)
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  @@index([customerId, createdAt])
  @@index([userId, createdAt])
  @@map("activities")
}

model HealthScoreCache {
  id String @id @default(cuid())
  customerId String @unique
  score Int
  components Json  // { deadlineAdherence, costPredictability, riskExposure }
  calculatedAt DateTime @default(now())
  expiresAt DateTime
  
  customer Customer @relation(fields: [customerId], references: [id], onDelete: Cascade)
  @@index([expiresAt])
  @@map("health_score_cache")
}
